{
  "authorization": {
    "sudo": {
      "groups": ["admin", "wheel", "sysadmin"],
      "users": ["vagrant","shigeo"],
      "passwordless": "true",
      "sudoers_defaults": [
        "!visiblepw",
        "env_reset",
        "always_set_home",
        "secure_path = /sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin"
        ]
    }
  },
  "git":{
    "version": "1.9.3",
    "source_uri": "https://www.kernel.org/pub/software/scm/git/git-1.9.3.tar.gz"
  },
  "vim":{"install_method": "source"},
  "run_list":[
    "base",
    "localedef",
    "wget",
    "bind-utils",
    "user-admin",
    "sudo",
    "nginx",
    "git",
    "nodejs",
    "haskell::ghc",
    "vim"
    ]
}
